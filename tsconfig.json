{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2015",
        "rootDir": "src",
        "outDir": "dist",
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "exclude": [
        "node_modules",
        "typings",
        "examples",
        "dist"
    ],
    "include": [
        "src/**/*"
    ],
    "compileOnSave": false
}
